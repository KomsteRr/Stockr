{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist/",
        "strict": false,
        "sourceMap": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.js",
        "dist/"
    ]
}